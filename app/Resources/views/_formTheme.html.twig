{% block form_row -%}
    {% set showErrorIcon = (not compound or force_error|default(false)) and not valid %}
    <div class="cool-class form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}{{ showErrorIcon ? ' has-feedback' :'' }}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {% if showErrorIcon %}
            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        {% endif %}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row %}